#!/usr/bin/env node

'use strict';

const getPun = require('../index').getPun;
const getRandomPun = require('../index').getRandomPun;
const display = require('../lib/utils');

const argv = require('yargs').argv;

if (argv.n) {
  getPun(argv.n)
    .then(pun => display(argv.cow, pun));
} else {
  getRandomPun()
    .then(pun => display(argv.cow, pun));
}
